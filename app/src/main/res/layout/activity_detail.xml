<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <!-- Begin Detail Section -->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background_grey"
                android:orientation="vertical" >

            <!-- START -->
            <android.support.v7.widget.CardView
                    android:id="@+id/cview_profile"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_eight"
                    android:layout_marginRight="@dimen/margin_eight"
                    android:layout_marginBottom="@dimen/margin_five"
                    android:layout_marginTop="@dimen/margin_five"
                    android:elevation="3dp">

                <android.support.constraint.ConstraintLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_twenty"
                            android:paddingBottom="@dimen/padding_twenty"
                            android:text="Loading..."
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/text_eighteen"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
            <!--// END -->

        </LinearLayout>
        <!-- End Detail Section -->

    </LinearLayout>

</android.support.constraint.ConstraintLayout>




